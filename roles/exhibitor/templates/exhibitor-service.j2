[Unit]
Description={{ exhibitor_service }}
After=docker.service
After=zookeeper.service
Requires=docker.service
Requires=dnsmasq.service

[Service]
Restart=on-failure
RestartSec=20
TimeoutStartSec=20m

ExecStartPre=-/usr/bin/docker rm {{ exhibitor_container_name }}
ExecStartPre=-/usr/bin/docker pull {{ exhibitor_image }}:{{ exhibitor_image_tag }}

ExecStart=/usr/bin/docker run \
    --name={{ exhibitor_container_name }} \
    {{ exhibitor_ports }} \
    --volumes-from {{ zookeeper_data_volume }} \
    {{ exhibitor_image }}:{{ exhibitor_image_tag }}

ExecStop=/bin/bash -c " \
    /usr/bin/docker kill {{ exhibitor_container_name }} && \
    /usr/bin/docker rm {{ exhibitor_container_name }}"

[Install]
WantedBy=multi-user.target
